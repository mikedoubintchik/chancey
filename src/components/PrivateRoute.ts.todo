import { Route, Redirect } from 'react-router-dom';
import { useStore } from 'store';

export default function PrivateRoute({ component: Component, ...rest }) {
  const {
    state: { user },
  } = useStore();

  return (
    <Route
      {...rest}
      render={(props) => {
        return user ? <Component {...props} /> : <Redirect to="/login" />;
      }}
    />
  );
}
